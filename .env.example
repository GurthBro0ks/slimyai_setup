# ============================================================================
# SlimyAI Discord Bot Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env files to version control

# ============================================================================
# Discord Configuration
# ============================================================================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=1415387116564910161
DISCORD_GUILD_ID=your_discord_guild_id_here

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
VISION_MODEL=gpt-4o
MODERATION_MODEL=text-moderation-latest
IMAGE_MODEL=dall-e-3

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=s26873_slimy
DB_USER=slimy_local
DB_PASSWORD=your_database_password_here

# ============================================================================
# Google API Configuration
# ============================================================================
# Option 1: Service Account JSON file path
GOOGLE_APPLICATION_CREDENTIALS=./google-service-account.json

# Option 2: Inline JSON (not recommended for production)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key_id":"...","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}'

# Google Sheets Configuration
SHEETS_PARENT_FOLDER_ID=your_google_sheets_parent_folder_id_here
SHEETS_SPREADSHEET_ID=your_sheets_spreadsheet_id_here
SHEETS_GID_ALIASES='{"sheet_name":"gid_number"}'

# Alternative: API Key (less secure, for read-only operations)
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here

# ============================================================================
# MCP (Model Context Protocol) Configuration
# ============================================================================
MCP_CLUB_ANALYTICS_URL=http://localhost:3091
MCP_GOOGLE_SHEETS_URL=http://localhost:3092
MCP_MYSQL_DATA_URL=http://localhost:3093
MCP_AUTH_TOKEN=your_mcp_auth_token_here

# ============================================================================
# External API Keys
# ============================================================================
SNELP_API_KEY=your_snelp_api_key_here
