# ============================================
# Slimy.AI Discord Bot - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# SECURITY: Never commit .env to version control!

# ============================================
# DISCORD CONFIGURATION (Required)
# ============================================

# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_token_here

# Your Discord application client ID
DISCORD_CLIENT_ID=your_client_id_here

# OPTIONAL: For guild-specific command deployment (instant updates for testing)
# Leave blank for global deployment (takes ~1 hour to propagate)
DISCORD_GUILD_ID=

# ============================================
# OPENAI CONFIGURATION (Optional)
# ============================================

# OpenAI API key for chat, vision, and image generation
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Chat model (default: gpt-4o)
# Options: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o

# Vision model for Super Snail stats analysis (default: gpt-4o)
# Options: gpt-4o, gpt-4-turbo, gpt-4o-mini
VISION_MODEL=gpt-4o

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================
# Bot works without database (uses JSON files as fallback)
# For production, MySQL is recommended

DB_HOST=db
DB_PORT=3306
DB_USER=slimy_bot_user
DB_PASSWORD=your_secure_password_here
DB_NAME=slimy_ai_bot

# Database connection pool size (default: 10)
# Increase for high-traffic servers
DB_CONNECTION_LIMIT=10

# ============================================
# GOOGLE SHEETS CONFIGURATION (Optional)
# ============================================
# For Super Snail stats tracking per-user sheets

# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./google-service-account.json

# OR use inline JSON (for Pterodactyl/Docker deployments):
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Google Drive folder ID for storing user sheets
SHEETS_PARENT_FOLDER_ID=

# Legacy (deprecated - kept for backward compatibility)
SHEETS_SPREADSHEET_ID=
SNAIL_SHEET_ID=
SNAIL_GID=

# ============================================
# MONITORING & HEALTH (Production)
# ============================================

# HTTP port for health check endpoints (default: 3000)
# Endpoints: http://localhost:3000/health, /metrics
HEALTH_PORT=3000

# Logging level (default: info)
# Options: debug, info, warn, error, critical
LOG_LEVEL=info

# Discord webhook URL for critical error alerts (optional)
# Bot will send notifications for unhandled errors
ERROR_WEBHOOK_URL=

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable automatic image generation on intent detection (default: false)
# AUTO_IMAGE_GENERATION=true

# Enable snail auto-detection in all channels (default: false)
# SNAIL_AUTO_DETECT_ALL_CHANNELS=true
