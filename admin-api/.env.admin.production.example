# API
PORT=3080
HOST=127.0.0.1
NODE_ENV=production
TRUST_PROXY=1
JWT_SECRET=replace_me_with_32+_chars
JWT_MAX_AGE_SECONDS=43200
COOKIE_DOMAIN=admin.slimyai.xyz
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# Discord OAuth (scopes: identify, guilds)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://admin.slimyai.xyz/api/auth/callback

# Database & Sheets
DB_URL=mysql://user:password@127.0.0.1:3306/slimy
GOOGLE_SHEETS_CREDENTIALS=/opt/slimy/creds/sheets-service.json

# Network & Security
CORS_ENABLED=false
ALLOWED_ORIGIN=https://admin.slimyai.xyz
HSTS_MAX_AGE=31536000
ADMIN_ALLOWED_ORIGINS=https://admin.slimyai.xyz

# Task limits
ADMIN_TASK_LIMIT_WINDOW_MS=60000
ADMIN_TASK_LIMIT_MAX=5
BACKUP_ROOT=/var/backups/slimy
BACKUP_MYSQL_DIR=/var/backups/slimy/mysql
BACKUP_DATA_DIR=/var/backups/slimy/data
BACKUP_RETENTION_DAYS=14
