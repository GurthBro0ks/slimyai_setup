{
  "name": "slimyai_setup",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "index.js",
  "workspaces": [
    "admin-ui",
    "admin-api"
  ],
  "scripts": {
    "start": "node index.js",
    "refresh:commands": "node scripts/refresh-commands.js",
    "restart:bot": "node scripts/restart-bot.js",
    "test:slash": "node scripts/run-slash-tests.js",
    "qa:full": "npm run refresh:commands && npm run restart:bot && node scripts/run-slash-tests.js",
    "deploy": "node deploy-commands.js",
    "test:memory": "node tests/memory-simple.test.js",
    "analyze-test": "node ./scripts/analyze-smoke.js",
    "dbtest": "node ./scripts/db-test.js",
    "ingest:test": "node scripts/ingest-club-screenshots.js --guild $GUILD_ID --dir /opt/slimy/app/screenshots/test --type both --commit",
    "verify:stats": "node scripts/verify-club-stats.js --guild $GUILD_ID",
    "quick:sum": "node scripts/quick-sum.js --guild $GUILD_ID",
    "spotcheck:stats": "node scripts/post-stats-to-channel.js --guild $GUILD_ID --channel $DEV_STATS_CHANNEL_ID",
    "recompute:latest": "node scripts/recompute-from-snapshot.js --guild $GUILD_ID --latest",
    "recompute:push": "node scripts/recompute-from-snapshot.js --guild $GUILD_ID --latest --rebuild-wow --push-sheet",
    "lint": "eslint . --max-warnings=0 || true",
    "circles": "madge --circular --extensions js,mjs,cjs . || true",
    "depcheck": "depcheck --json || true",
    "jscpd": "jscpd --silent --format json --reporters json --min-lines 25 --max-lines 200 --threshold 1 --gitignore || true",
    "admin:api": "node admin-api/server.js",
    "admin:ui": "next dev --port 3081 -r admin-ui",
    "admin:ui:build": "npm --workspace admin-ui run build",
    "admin:ui:start": "npm --workspace admin-ui run start",
    "admin:dev": "concurrently \"npm:admin:api\" \"npm:admin:ui\"",
    "admin:bootstrap": "bash ./scripts/bootstrap-admin.sh",
    "backup:run": "bash scripts/backup.sh"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@seald-io/nedb": "^4.1.2",
    "@slimy/core": "file:packages/core",
    "cheerio": "^1.1.2",
    "chart.js": "^4.4.8",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "express-rate-limit": "^7.4.0",
    "express": "^5.1.0",
    "googleapis": "^133.0.0",
    "helmet": "^8.1.0",
    "image-hash": "^6.0.1",
    "imghash": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "mwbot": "^2.1.3",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.15.2",
    "nanoid": "^5.0.7",
    "next": "^14.2.16",
    "node-fetch": "^2.7.0",
    "node-schedule": "^2.1.1",
    "openai": "^4.57.0",
    "proper-lockfile": "^4.1.2",
    "redis": "^5.8.3",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.4",
    "swr": "^2.3.0",
    "zod": "^3.23.8",
    "undici": "^7.16.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "concurrently": "^8.2.2",
    "jscpd": "^4.0.5",
    "madge": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "promise": "^8.3.0",
    "shx": "^0.4.0"
  }
}
