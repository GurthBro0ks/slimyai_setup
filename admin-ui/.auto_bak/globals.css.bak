:root {
  color-scheme: light dark;
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background-color: #0f172a;
  color: #e2e8f0;
}

body {
  margin: 0;
  min-height: 100vh;
  background: linear-gradient(180deg, #0f172a 0%, #1f2937 100%);
}

a {
  color: inherit;
  text-decoration: none;
}

button {
  font: inherit;
}

.layout {
  display: flex;
  min-height: 100vh;
}

.sidebar {
  width: 260px;
  background: rgba(15, 23, 42, 0.9);
  border-right: 1px solid rgba(148, 163, 184, 0.2);
  padding: 24px;
}

.content {
  flex: 1;
  padding: 32px;
  background: rgba(15, 23, 42, 0.65);
  backdrop-filter: blur(16px);
}

.content.content--without-sidebar {
  max-width: 760px;
  width: 100%;
  padding: 48px 16px 72px;
  margin: 0 auto;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
}

.card {
  background: rgba(30, 41, 59, 0.7);
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 10px 40px rgba(15, 23, 42, 0.3);
}

.btn {
  background: #38bdf8;
  color: #0f172a;
  border: none;
  border-radius: 8px;
  padding: 10px 16px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.2s;
}

.btn.outline {
  background: transparent;
  color: #38bdf8;
  border: 1px solid rgba(56, 189, 248, 0.4);
}

.btn:hover {
  opacity: 0.85;
}

.table {
  width: 100%;
  border-collapse: collapse;
  background: rgba(15, 23, 42, 0.6);
  border-radius: 12px;
  overflow: hidden;
}

.table th,
.table td {
  padding: 12px 16px;
  border-bottom: 1px solid rgba(148, 163, 184, 0.12);
}

.pill {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(56, 189, 248, 0.1);
  color: #38bdf8;
  font-size: 12px;
  font-weight: 600;
}

.input,
.textarea,
.select {
  width: 100%;
  padding: 10px 12px;
  border-radius: 8px;
  border: 1px solid rgba(148, 163, 184, 0.2);
  background: rgba(15, 23, 42, 0.6);
  color: #e2e8f0;
}

.textarea {
  min-height: 180px;
  resize: vertical;
}

.toast {
  position: fixed;
  bottom: 24px;
  right: 24px;
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid rgba(56, 189, 248, 0.3);
  padding: 14px 18px;
  border-radius: 10px;
  color: #e2e8f0;
  box-shadow: 0 20px 40px rgba(14, 116, 144, 0.35);
}
